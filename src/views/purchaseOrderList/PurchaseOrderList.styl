.container_purchase-order-list {
  width 100%
  height auto
  background #ffffff

  >>> img {
    width 100%
    height 100%
  }

  .hd {
    width 100%
    height 68px
    display flex
    align-items center
    position relative
    border-bottom 1px solid rgba(238, 238, 238, 0.6)

    .back-btn {
      width 44px
      height 44px
      margin 0 6px 0 0

      img {
        width 100%
        height 100%
      }
    }

    .text {
      font-family PingFangSC-Medium
      font-size 28px
      color #262626
      text-align center
      height 40px
      line-height 40px
      margin 0 6px 0 0
    }

  }

  .bd {
    width 100%
    padding 0 24px 0

    .goods-box {
      width 100%
      padding 30px 0 38px 0
      border-bottom 1px solid #EEEEEE
      display flex

      .goods-img {
        width 160px
        height 160px
        border-radius 8px
        background #e3e3e3
        margin 0 12px 0 0

        img {
          border-radius 8px
        }
      }

      .goods-detail {
        flex 1

        //height 200px
        //background aliceblue

        .name {
          width 100%
          line-height 36px
          height 72px
          font-family PingFangSC-Regular
          font-size 28px
          color #262626
          text-align justify
          display -webkit-box
          -webkit-box-orient: vertical
          -webkit-line-clamp 2
          margin 0 0 6px 0
        }

        .specifications {
          width 100%
          height 33px
          line-height 33px
          display block
          font-family PingFangSC-Regular
          font-size 24px
          color #8D93A4
          text-align justify
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          margin 0 0 20px 0
        }

        .option {
          width 100%
          height 36px
          display flex
          align-items center
          position relative

          .price {
            height 100%
            display flex
            align-items center

            .icon {
              width 16.4px
              height 20px
              margin 0 3.6px 0 0
            }

            .num {
              font-family SFUIDisplay-Regular
              font-size 30px
              color #E93A0F
              text-align justify
              height 36px
              line-height 36px
            }
          }

          .amount {
            height 34px
            display flex
            align-items center
            position absolute
            right 0

            .icon {
              height 19px
              line-height 19px
              font-family SFUIDisplay-Regular
              font-size 16px
              color #ADB1BE
              text-align justify
              margin 0 4px 0 0
            }

            .num {
              font-family SFUIDisplay-Regular
              font-size 28px
              color #ADB1BE
              text-align justify
              height 34px
              line-height 34px
            }
          }
        }
      }
    }
  }
}
