.container{
  height 100%
  .main-box{
    // height 80%
    padding-top: 198px
    overflow auto
  }
  .card{
    width 100%
    padding 16px 20px
    border-bottom 1px solid rgba(238,238,238,0.6)
    display flex  
    align-items: center
    justify-content: space-between
    .portrait{
      width 192px
      height 192px
    }
    .content{
      width 506px
      position relative 
      h3{
        text-align left
        font-size: 28px;
        color: #262626;
        margin-bottom: 10px
      }
      .sales-num{
        display flex
        justify-content: space-between
        font-size: 22px;
        color: #8D93A4;
        .stock{
          font-size 24px
          color: #575C68;
        }
      }
      .icon{
        width 32px
        height 32px 
        margin-right 10px 
      }
      .labels{
        display flex
        flex-wrap wrap
        margin-top: 14px
        .label{
          &.red{
            color: #F2604D;
            border: 1px solid #F2604D;
          }
          height 32px  
          line-height: 32px
          margin-right 10px
          font-size: 20px;
          // 
          color: #8D93A4;
          padding 0 8px
          background: rgba(255,242,238,0.5);
          // 
          border: 1px solid #8D93A4;
        }
      }
    }
  }
}