.container_purchase-order-detail {
  width 100%
  height auto
  background #ffffff

  >>> img {
    width 100%
    height 100%
  }

  .hd {
    width 100%
    height 68px
    display flex
    align-items center
    position fixed
    top 0
    left 0
    z-index 2
    background #ffffff
    border-bottom 1px solid rgba(238, 238, 238, 0.6)

    .back-btn {
      width 44px
      height 44px
      margin 0 6px 0 0

      img {
        width 100%
        height 100%
      }
    }

    .text {
      font-family PingFangSC-Medium
      font-size 28px
      color #262626
      text-align center
      height 40px
      line-height 40px
      margin 0 6px 0 0
    }

    .location-icon {
      width 32px
      height 32px

      img {
        width 100%
        height 100%
      }
    }

    .manage-btn {
      //width 44px
      height 37px
      line-height 37px
      position absolute
      right 24px
      font-family PingFangSC-Regular
      font-size 26px
      color #575C68
      text-align justify
    }
  }

  .bd {
    width 100%
    padding 98px 30px 0

    .order-status {
      width 100%
      height 90px
      display flex
      align-items center
      border-bottom 1px solid #EEEEEE
      font-size 0

      .icon {
        width 50px
        height 50px
        margin 0 12px 0 0
      }

      .text {
        height 42px
        line-height 42px
        font-family PingFangSC-Regular
        font-size 30px
        color #262626
        text-align left
      }
    }

    .consignee-info {
      width 100%
      padding 30px 0 0 0
      border-bottom 1px solid #EEEEEE

      .consignee {
        display flex
        align-items center
        margin 0 0 12px 0
        font-size 0

        .consignee__name {
          max-width 180px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          font-family PingFangSC-Medium
          font-size 30px
          color #262626
          text-align left
          height 42px
          line-height 42px
          margin 0 40px 0 0
        }

        .consignee__phone {
          height 38px
          line-height 38px
          font-family SFUIDisplay-Medium
          font-size 32px
          color #262626
        }
      }
      .address {
        width 100%
        display flex
        align-items center
        position relative
        margin 0 0 38px 0

        .text {
          width 644px
          max-height 64px
          line-height 32px
          margin 0
          display -webkit-box
          -webkit-box-orient: vertical
          -webkit-line-clamp 2
          font-family PingFangSC-Regular
          font-size 24px
          color #575C68
          text-align justify
        }

        .next-btn {
          width 40px
          height 40px
          position absolute
          right -8px
        }
      }
    }


    .goods-info {
      width 100%
      height 216px
      display flex
      align-items center
      border-bottom 1px solid #EEEEEE

      .goods-list {
        width 100%
        height 152px
        background #F4F4F4
        border-radius 12px
        display flex
        align-items center

        .goods {
          width 120px
          height 120px
          margin 0 16px 0 0
          border-radius 8px
          //background aliceblue

          img {
            border-radius 8px
          }

          &.goods_more {
            width 130px
            height 152px
            display flex
            align-items center
            justify-content center
            font-size 0
            background #F4F4F4
            margin 0

            .text {
              height 30px
              line-height 30px
              font-family PingFangSC-Regular
              font-size 22px
              color #8D93A4
              text-align justify
            }

            .icon {
              width 32px
              height 32px
            }
          }

          &:first-child {
            margin 0 16px 0
          }
        }
      }
    }

    .contact {
      width 100%
      height 88px
      display flex
      justify-content center
      align-items center
      border-bottom 1px solid #EEEEEE

      .icon {
        width 36px
        height 36px
        margin 0 10px 0 0
      }

      .text {
        height 37px
        line-height 37px
        font-family PingFangSC-Regular
        font-size 26px
        color #386DB4
        text-align left
      }
    }
    .leave-message {
      width 100%
      padding 26px 0 22px 0
      border-bottom 1px solid #EEEEEE

      .character {
        height 37px
        line-height 37px
        margin 0 0 14px 0
        font-family PingFangSC-Regular
        font-size 26px
        color #8D93A4
        text-align left
      }

      .text {
        width 100%
        max-height 74px
        line-height 37px
        font-family PingFangSC-Regular
        font-size 26px
        color #262626
        text-align left
        display -webkit-box
        -webkit-box-orient: vertical
        -webkit-line-clamp 2
      }
    }
    .order-info {
      width 100%
      padding 30px 0 0 0
      margin 0 0 150px 0

      .code,.create,.dispatch {
        height 30px
        display flex
        align-items center
        margin 0 0 6px 0

        .character {
          height 30px
          line-height 30px
          font-family PingFangSC-Regular
          font-size 22px
          color #8D93A4
          text-align left
          margin 0 20px 0 0
        }

        .text {
          font-family PingFangSC-Regular SFUIDisplay-Regular
          font-size 22px
          color #8D93A4
          text-align left
          line-height 30px
          height 30px

          .icon {
            width 22px
            height 22px
            margin 0 0 0 12px
          }

          &.text_code {
            display flex
            align-items center
          }
        }
      }

      .code {}
      .create {}
      .dispatch {}
    }
  }

  .footer {
    width 100%
    height 90px
    border-top 1px solid #DCDEE6
    background #ffffff
    display flex
    align-items center
    justify-content flex-end
    position fixed
    left 0
    bottom 0
    z-index 2

    .btn {
      width 156px
      height 54px
      line-height 54px
      text-align center
      background rgba(220,222,230,0.10)
      border 1px solid #8D93A4
      border-radius 35px
      font-family PingFangSC-Regular
      font-size 24px
      color #8D93A4
      margin 0 20px 0 0
    }
    .btn_edit {}
    .btn_cancel {}
    .btn_remind {
      background rgba(249,171,16,0.10)
      border 1px solid #F9AB10
      color #F9AB10
    }
  }
}
