.container_good-detail {
  width 100%
  height auto
  min-height 100%
  background #ffffff

  .good-images-box {
    width 100%
    height 750px

    background #e3e3e3

    .mint-swipe_good-detail {
      .item {

        img {
          width 100%
          height 100%
          object-fit cover
        }
      }
    }
  }

  .main-box_good-detail {
    width 100%
    height auto
    background #ffffff

    .good-desc {
      width 100%
      padding 28px

      .top {
        //width 694px
        width 100%
        height 262px
        //padding 28px 0 0 0
        //margin 0 auto
        border-bottom 1px solid #EEEEEE

        .name {
          width 100%
          max-height 88px
          line-height 44px
          ont-family PingFangSC-Regular;
          font-size 32px
          color #262626
          text-align justify
          overflow hidden
          margin 0 0 32px 0

          display -webkit-box
          -webkit-box-orient: vertical
          -webkit-line-clamp 2
        }

        .money-box {
          width 100%
          height 33px
          margin 0 0 17px 0
          position relative
          display flex

          .money-box__left, .money-box__right {
            flex 1
            display flex
            align-items center
            font-size 0

            .character {
              font-family PingFangSC-Regular
              font-size 24px
              color #8D93A4
              text-align justify
              margin 0 10px 0 0
            }
          }

          .money-box__left {
            justify-content flex-start

            .num {
              display flex
              font-size 0
              align-items center

              .icon {
                width 16.4px
                height 20px
                margin 0 3.6px 0 0

                img {
                  width 100%
                  height 100%
                }
              }

              .text {
                font-family SFUIDisplay-Regular
                font-size 30px
                color #E93A0F
                text-align justify
              }
            }
          }

          .money-box__right {
            justify-content flex-end

            .character {
              margin 0 6px 0 0
            }

            .num {
              font-family SFUIDisplay-Regular
              font-size 26px
              color #575C68
              text-align justify
            }
          }

          &.money-box_price {
            .money-box__left {
              .num {
                .text {
                  position absolute
                  //top 50%
                  bottom 0
                  left 78px
                  //transform translate(0, -50%)
                  font-family SFUIDisplay-Medium
                  font-size 42px
                  color #E93A0F
                  text-align justify
                  height 50px
                  line-height 50px
                }
              }
            }
          }
        }
      }

      .middle {
        width 100%
        height 252px
        border-bottom 1px solid #EEEEEE

        & > div {
          width 100%
          height 84px
          position relative
          display flex
          align-items center
          font-size 0

          .character {
            font-family PingFangSC-Regular
            font-size 24px
            color #8D93A4
            text-align justify
            width 48px
            height 33px
            line-height 33px
            margin 0 16px 0 0
          }

          .text {
            font-family PingFangSC-Regular
            font-size 24px
            color #262626
            height 33px
            line-height 33px
          }

          .next-btn {
            position absolute
            width 40px
            height 40px
            right -4px

            img {
              width 100%
              height 100%
            }
          }
        }
      }

      .bottom {
        width 100%
        height 84px
        position relative
        display flex
        align-items center
        font-size 0
        border-bottom 1px solid #EEEEEE

        .character {
          font-family PingFangSC-Regular
          font-size 24px
          color #8D93A4
          text-align justify
          width 48px
          height 33px
          line-height 33px
          margin 0 16px 0 0
        }

        .text {
          font-family PingFangSC-Regular
          font-size 24px
          color #262626
          height 33px
          line-height 33px
        }

        .next-btn {
          position absolute
          width 40px
          height 40px
          right -4px

          img {
            width 100%
            height 100%
          }
        }
      }
    }

    .good {
      width 100%
      padding 28px 28px 0 28px

      .title {
        width 100%
        height 40px
        display flex
        align-items center
        font-size 0
        position relative

        .left-block {
          width 8px
          height 24px
          background #F2BF00
          position absolute
          left -28px
        }

        .text {
          font-family PingFangSC-Medium
          font-size 28px
          color #262626
          height 40px
          line-height 40px
        }

        .next-btn {
          width 40px
          height 40px
          position absolute
          right -4px

          img {
            width 100%
            height 100%
          }
        }
      }

      .good__bd {
        width 100%
        border-bottom 1px solid #EEEEEE
        padding 0 0 28px 0
      }

      &.good_report {
        padding 0 28px
        .title {
          margin 0 0 12px 0
          .report-icon {
            width 36px
            height 36px
            position absolute
            right 52px

            img {
              width 100%
              height 100%
            }
          }
        }
        .good__bd {
          & > div {
            display flex
            width 100%
            height 33px

            div {
              font-family PingFangSC-Regular
              font-size 24px
              color #575C68
              text-align justify
              height 33px
              line-height 33px
              margin 0 40px 0 0
            }
          }
        }
      }
      &.good_comment {
        .title {
          margin 0 0 18px 0
          .all-text {
            font-family PingFangSC-Regular
            font-size 24px
            color #F2BF00
            text-align justify
            height 33px
            line-height 33px
            position absolute
            right 52px
          }
        }
        .good__bd {
          .keyword-box {
            display flex
            flex-wrap wrap
            margin 0 0 18px 0

            .keyword {
              height 54px
              line-height 54px
              text-align center
              padding 0 20px
              border-radius 27px
              background #FFF2EE
              font-family PingFangSC-Regular
              font-size 22px
              color #262626
              margin 0 14px 16px 0
            }
          }

          .comment-box {
            margin 0 0 32px 0

            .author {
              width 100%
              height 40px
              display flex
              position relative
              align-items 0
              font-size 0
              margin 0 0 10px 0

              .portrait {
                width 40px
                height 40px
                border-radius 4px
                margin 0 10px 0 0
                background #e3e3e3

                img {
                  width 100%
                  height 100%
                  border-radius 4px
                  object-fit cover
                }
              }

              .nickname {
                font-family PingFangSC-Regular
                font-size 28px
                color #262626
                height 40px
                line-height 40px
              }

              .like {
                position absolute
                right 0
                display flex
                align-items center

                .icon {
                  width 30px
                  height 30px

                  img {
                    width 100%
                    height 100%
                  }
                }

                .num {
                  font-family PingFangSC-Regular
                  font-size 22px
                  color #575C68
                  text-align justify
                  line-height 22px
                  height 22px
                  margin 0 0 0 8px
                }
              }
            }
            .text {
              width 100%
              line-height 38px
              ont-family PingFangSC-Regular
              font-size 28px
              color #575C68
              text-align justify
              margin 0 0 8px 0
            }
            .images {
              display flex
              flex-wrap wrap

              .image {
                width 132px
                height 132px
                border-radius 4px
                margin 0 2px 0 0
                background #e3e3e3
              }
            }

            &:last-child {
              margin 0
            }
          }
        }
      }
      &.good_similar {
        .title {
          margin 0 0 14px 0
        }
        .good__bd {
          display flex

          .similar-box {
            flex 1
            margin 0 8px 0 0

            .img {
              width 100%
              height 226px
              border-radius 8px
              background #e3e3e3
              margin 0 0 20px 0

              img {
                width 100%
                height 100%
                object-fit cover
                border-radius 8px
              }
            }

            .name {
              width 100%
              font-family PingFangSC-Regular
              font-size 26px
              color #262626
              line-height 34px
              max-height 68px
              overflow hidden
              text-align left
              margin 0 0 8px 0

              display -webkit-box
              -webkit-box-orient vertical
              -webkit-line-clamp 2
            }

            .price {
              width 100%
              height 38px
              display flex
              align-items center
              font-size 0

              .icon {
                width 18px
                height 22px

                img {
                  width 100%
                  height 100%
                }
              }

              .num {
                font-family SFUIDisplay-Medium
                font-size 32px
                color #E93A0F
                text-align justify
                height 38px
                line-height 38px
              }
            }

            &:last-child {
              margin 0
            }
          }
        }
      }
      &.good_detail {
        display relative

        .title {}
        .good__bd {
          padding 0
          position absolute
          //top 40px
          right 0
          //bottom 0
          left 0

          .image {
            width 100%
            font-size 0

            img {
              width 100%
              height 100%
              object-fit cover
            }

            &:last-child {
              margin-bottom 100px
            }
          }
        }
      }
    }

  }
  .footer {
    width 100%
    height 100px
    position fixed
    left 0
    bottom 0
    background #ffffff
    display flex
    align-items center
    font-size 0
    padding 0 16px
    z-index 99
    border-top 1px solid #DCDEE6

    .help-btn,.collect-btn {
      display flex
      flex-wrap wrap
      justify-content center
      align-content flex-start
      width 42px
      font-size 0
      margin 0 42px 0 0

      .icon {
        width 42px
        height 42px
        margin 0 0 2px 0

        img {
          width 100%
          height 100%
        }
      }

      .text {
        width 100%
        font-family PingFangSC-Regular
        font-size 20px
        color #8D93A4
        height 28px
        line-height 28px
        letter-spacing 0
        white-space nowrap
      }
    }

    .add-list-btn,.stock-btn {
      width 220px
      height 80px
      line-height 80px
      text-align center
      position absolute
      font-family PingFangSC-Regular
      font-size 30px
      border-radius 8px
    }

    .add-list-btn {
      background #FFDFD5
      color #E93A0F
      right 244px
    }

    .stock-btn {
      background #E93A0F
      color #ffffff
      right 10px
    }
  }


  .shade {
    width 100%
    height 100vh
    position fixed
    top 0
    left 0
    background rgba(0,0,0,0.6)
    z-index 100
  }

  .activity-popup {
    width 100%
    height 700px
    background #ffffff
    position fixed
    bottom 0
    left 0
    z-index 101
    padding 14px 20px 0

    .header {
      width 100%
      height 54px
      display flex
      align-items center
      position relative
      justify-content center
      margin 0 0 43px 0

      .text {
        font-family PingFangSC-Medium
        font-size 28px
        color #262626
        text-align justify
        height 40px
        line-height 40px
      }

      .close-btn {
        width 54px
        height 54px
        position absolute
        right -6px

        img {
          width 100%
          height 100%
        }
      }
    }

    .bd {
      width 100%
      height auto

      .activity {
        width 100%
        height auto
        display flex
        font-size 0
        margin 0 0 30px 0
        align-items flex-start
        justify-content flex-start

        .icon {
          width 24px
          height 24px
          margin 0 18px 0 0

          img {
            width 100%
            height 100%
            object-fit cover
          }
        }

        .detail {
          font-family PingFangSC-Regular
          font-size 24px
          color #262626
          text-align justify
          line-height 32px
          flex 1
        }
      }

    }
  }

  .dispatch-popup {
    width 100%
    height 700px
    background #ffffff
    position fixed
    bottom 0
    left 0
    z-index 101
    display flex
    //padding 14px 20px 0

    .dates {
      width 278px
      height 100%
      background #F6F6F6

      .date {
        width 100%
        height 120px
        line-height 120px
        text-align center
        font-family PingFangSC-Regular
        font-size 28px
        color #575C68

        &.active {
          background #ffffff
        }
      }
    }

    .times {
      width 472px
      height 100%
      background #ffffff
      padding 32px 16px 0 48px

      .time {
        width 100%
        height 31px
        line-height 31px
        margin 0 0 63px 0
        font-family SFUIDisplay-Regular
        font-size 26px
        color #575C68
        display flex
        align-items center
        position relative

        .text {
          font-family SFUIDisplay-Regular
          font-size 26px
          color #575C68
        }

        .icon {
          width 44px
          height 44px
          position absolute
          right 8px
          display none

          img {
            width 100%
            height 100%
          }
        }

        &.active {
          .text {
            color #F9AB10
          }
          .icon {
            display block
          }
        }
      }
    }
  }
}
